import java.awt.Color;
import java.awt.Graphics2D;
import java.util.*;
import java.lang.*;


public class BenfordPlot {
	private static int cWidth = 600;
	private static int cHeigth = 400;
	private static List<Double> benfordFrequencies = new ArrayList();//{30.1, 17.6, 12.5, 9.7, 7.9, 6.7, 5.8, 5.1, 4.6};
	private static int x = 10;
	private static int y = 0;

	public static void main(String[] args) {
		DrawingPanel canvas = new DrawingPanel(cWidth,cHeigth);
		Graphics2D pen = canvas.getGraphics();
		canvas.setBackground(Color.black);
		Benford x = new Benford();
		for(double number: x.getBenfordFrequencies()){
			benfordFrequencies.add(number);
		}
		x.readCounts("E:/CSC142_143/DataFiles/popData.txt");
		//plotData(x.getBenfordList(), pen);
		plotData(benfordFrequencies, pen);
		
		//pen.setColor(Color.RED);
		//pen.fillRect(10, 10, 500, 20);

	}

	private static void plotData(List<Double> list, Graphics2D pen) {
		
		
		int i = 49;
		int j = 0;
		int bar;
		
		for(double number: list){
			System.out.println(number);
			char entryNum = (char)i; 
			bar = (int)(cWidth*(number/35));
			String s = "";
			s = s + entryNum;
			i ++;
			y += 40;
			pen.setColor(Color.YELLOW);
			pen.fillRect(x+10, y, bar, 20);
			pen.setColor(Color.RED);
			pen.drawString(s, x, y+15);	
			pen.drawString(String.valueOf(number), bar/2, y+15);
			pen.drawString("^",(int)(cWidth*(benfordFrequencies.get(j)/100)), y+15);
			j++;
			//pen.drawString(number, i, entryNum); //Trying to figure out how to print the percentages on the rectangles.
			s = "";
		}
		
	}

}
