import java.util.*;
import java.io.*;
public class testClient {

	public static void main(String[] args) throws FileNotFoundException {
		File z = new File("Macbeth.txt");
		File w = new File("MuchAdoAboutNothing.txt");
		File u = new File("OliverTwist.txt");
		
		long startTime = System.currentTimeMillis();
		BookAnalyzer a = new BookAnalyzer("posWords.txt","negWords.txt",z);
		long endTime = System.currentTimeMillis();
		System.out.printf("Time taken for sentiment analysis of %s: %.2f seconds.\n",z,((double)(endTime-startTime)/1000));
		System.out.println();
		
		startTime = System.currentTimeMillis();
		BookAnalyzer b = new BookAnalyzer("posWords.txt","negWords.txt",w);
		endTime = System.currentTimeMillis();
		System.out.printf("Time taken for sentiment analysis of %s: %.2f seconds.\n",w,((double)(endTime-startTime)/1000));
		System.out.println();
		
		startTime = System.currentTimeMillis();
		BookAnalyzer c = new BookAnalyzer("posWords.txt","negWords.txt",u);
		endTime = System.currentTimeMillis();
		System.out.printf("Time taken for sentiment analysis of %s: %.2f seconds.\n",u,((double)(endTime-startTime)/1000));
		System.out.println();
		
		
		
		
		//startTime = System.currentTimeMillis();
		//endTime = System.currentTimeMillis();
		
		
	}

}
