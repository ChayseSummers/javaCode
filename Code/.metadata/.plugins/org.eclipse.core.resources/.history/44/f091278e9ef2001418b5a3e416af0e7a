import java.util.*;
import java.io.*;

public class Benford {
	private static ArrayList<Integer> benfordList;
	
	public Benford(){
		benfordList = new ArrayList<Integer>();
	}
	
	public static void readCounts(String inputFile){
		try {
			Scanner fileScanner = new Scanner(new File (inputFile));
			String temp = fileScanner.next();
			System.out.print("Loading counts... ");
			while(fileScanner.hasNext())
				if((int)temp.charAt(0)>=49 && (int)temp.charAt(0)<=57)
					benfordList.add((int)temp.charAt(0)-49,1);
				temp= fileScanner.next();
					
			System.out.println(" done.");
			//for(String data:benfordList)
				
		} catch (FileNotFoundException e) {
			System.out.println("File not found, please check pathway and try again.");
		}
		
			
		}
	

}
